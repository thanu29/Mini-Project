-------> JavaScript Code :-


document.addEventListener("DOMContentLoaded", () => {
  const carouselContent = document.querySelector(".carousel-content");
  const slides = document.querySelectorAll(".carousel-item");
  const prevButton = document.getElementById("prev");
  const nextButton = document.getElementById("next");

  let currentIndex = 0; // Index of the current slide

  const updateCarousel = () => {
    const slideWidth = slides[0].offsetWidth; // Get the width of a slide
    carouselContent.style.transform = `translateX(-${currentIndex * slideWidth}px)`;
  };

  // Go to the next slide
  nextButton.addEventListener("click", () => {
    if (currentIndex < slides.length - 1) {
      currentIndex++;
    } else {
      currentIndex = 0; // Loop back to the first slide
    }
    updateCarousel();
  });

  // Go to the previous slide
  prevButton.addEventListener("click", () => {
    if (currentIndex > 0) {
      currentIndex--;
    } else {
      currentIndex = slides.length - 1; // Loop back to the last slide
    }
    updateCarousel();
  });

  // Adjust the carousel when the window is resized
  window.addEventListener("resize", updateCarousel);
});
